<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context=".AgendarActividades">

    <LinearLayout
        android:id="@+id/agendar"
        android:layout_width="377dp"
        android:layout_height="483dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/background"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/tv1"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:hint="Nombre de la Actividad"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/btnFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark"
            android:text="Fecha"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/tv2"
            android:layout_width="204dp"
            android:layout_height="36dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="-42dp"
            android:hint="Seleccione la Fecha"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/btnHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark"
            android:text="Hora"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/tv3"
            android:layout_width="204dp"
            android:layout_height="36dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="-40dp"
            android:hint="Selecionne la Hora"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <EditText
            android:id="@+id/tv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:hint="DescripciÃ³n "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <RelativeLayout
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAgregar1"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="110dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimaryDark"
                android:onClick="Cronometro"
                android:text="Agregar"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnCancelar1"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_below="@id/btnAgregar1"
                android:layout_marginHorizontal="110dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimaryDark"
                android:onClick="Cancelar"
                android:text="CANCELAR"
                android:textColor="@android:color/white" />

        </RelativeLayout>

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="110dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="Cancelar"
            android:text="VER EVENTOS"
            android:textColor="@android:color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>